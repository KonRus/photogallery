<p id="notice"><%= notice %></p>

<h1>Pins</h1>

<%= form_tag(pins_path, method: :get) do %>
  <%= text_field_tag :title, params[:title], autocomplete: 'off', placeholder: "image title" %>
  <%= submit_tag "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Caption</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.title %></td>
        <td><%= pin.caption %></td>
        <td><%= image_tag(pin.image, style:'width:400px; height:auto') %></td>
      
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


